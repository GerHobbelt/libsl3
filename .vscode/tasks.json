{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",          
            "command": "cmake --build build -- -j$(nproc)",

            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "label": "clean",
            "type": "shell",          
            "command": "cmake --build build -- clean",

            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }        
    ]
}